{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "monolog/monolog": "^1.22",
    "symfony/console": "^4.0",
    "symfony/process": "^4.0",
    "symfony/cache": "^4.0",
    "twig/twig": "^2.0",
    "sandreas/php-time": "dev-master",
    "sandreas/php-strings": "dev-master",
    "ext-simplexml": "*",
      "ext-json": "*",
      "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "M4bTool\\": "src/library/"
    }
  },
  "config": {
    "optimize-autoloader": true
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "mockery/mockery": "^0.9.9",
    "mikey179/vfsstream": "^1.6"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/sandreas/php-strings"
    },
    {
      "type": "vcs",
      "url": "https://github.com/sandreas/php-time"
    }
  ]
}
